{
  "manifest_version": 2,

  "name": "Apache status beautifier",
  "description": "This extension suggests another UI for your Apache server-status page (with ExtendedStatus mode enabled) and some additional possibilities.",
  "version": "0.1.0",
  "background": {
    "scripts": ["src/background.js"]
  },

  "page_action": {
    "default_icon": "icon/icon.png",
    "default_popup": "src/popup.html",
    "default_title": "Apache status beautifier"
  },

  "icons": {
    "16":  "icon/icon16.png",
    "48":  "icon/icon48.png",
    "128": "icon/icon128.png"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
